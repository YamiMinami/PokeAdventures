<html lang="nl-be">
    <head>
        <%- include("partials/head") %>
      </head>
      <body>
    <%- include("partials/header") %>
    <main class="main-container">
        <% pokemons.forEach(pokemon => { %>
            <a href="/detail/<%= pokemon.id %>">
                <section class="box">
                    <article class="box-content">
                        <img src="<%= pokemon.sprites.front_default %>" alt="<%= pokemon.name %>">
                        <div>
                            <h1><%= pokemon.name.charAt(0).toUpperCase() + pokemon.name.slice(1) %></h1>
                            <% pokemon.types.forEach((type, i) => { %>
                                <span id="type<%= i + 1 %>" class="type"><%= type.type.name.charAt(0).toUpperCase() + type.type.name.slice(1) %></span>
                            <% }) %>
                        </div>

                    </article>
                </section>
            </a>
        <% }) %>
    </main>
    <aside>
        <section class="current-pokemon-container">
            <article class="current-content">
                <h1>Jouw pokemon</h1>
                <img src="<%= currentPokemon.sprites.other.showdown.front_default %>" alt="<%= currentPokemon.name.charAt(0).toUpperCase() %>">
                <h2><%= currentPokemon.name %></h2>
            </article>
        </section>
        <div class="search-pokemon">
            <form action="/overzicht" method="get">
                <label for="search">Zoek een pokemon</label>
                <input   type="text" id="overzicht-input" name="q" value="<%= q %>" placeholder="Vul pokemonnaam in">
                <button type="submit">Zoek</button>
            </form>
            </div>
    </aside>
    <%- include("partials/footer") %>
</body>
</html>